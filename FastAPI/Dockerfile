FROM python:3.11-slim

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ ì—…ë°ì´íŠ¸ ë° í•„ìš”í•œ íŒ¨í‚¤ì§€ ì„¤ì¹˜
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# uv ì„¤ì¹˜ (ë¹ ë¥¸ íŒ¨í‚¤ì§€ ê´€ë¦¬ì)
RUN pip install uv

# requirements.txt ë³µì‚¬ ë° ì˜ì¡´ì„± ì„¤ì¹˜
COPY requirements.txt* ./
RUN if [ -f requirements.txt ]; then \
    echo "ğŸ“‹ Installing from requirements.txt"; \
    uv pip install --system -r requirements.txt; \
    else \
    echo "âŒ No requirements.txt found, installing basic FastAPI dependencies"; \
    uv pip install --system fastapi uvicorn[standard] pydantic openai python-multipart requests python-dotenv langchain langchain-community scikit-learn konlpy pandas jinja2; \
    fi

# FastAPI ì•± íŒŒì¼ë“¤ ë³µì‚¬
COPY . .

# í™˜ê²½ë³€ìˆ˜ ì„¤ì •
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# í¬íŠ¸ 8000 ë…¸ì¶œ
EXPOSE 8000

# í—¬ìŠ¤ì²´í¬ ì¶”ê°€
HEALTHCHECK --interval=30s --timeout=15s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# FastAPI ì‹¤í–‰
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--log-level", "info"]
